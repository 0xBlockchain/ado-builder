{
  "definitions": {
    "nft-details": {
      "title": "Details",
      "description": "Tell us about what you're creating.",
      "$id": "/schemas/nft-detail",
      "type": "object",
      "ui:panel": true,
      "required": ["name", "symbol"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Name your NFT",
          "description": "Give your creation a name youâ€™ll easily identify it  with."
        },
        "symbol": {
          "type": "string",
          "title": "Create a NFT symbol",
          "description": "A publicly searchable identifier."
        },
        "url": {
          "type": "string",
          "title": "External link / url to image",
          "description": "Where users will go to learn more about this item."
        },
        "description": {
          "type": "string",
          "title": "Message",
          "description": "This will be included on the item's detail page. - Markdown syntax is supported."
        }
      }
    },

    "whitelist": {
      "title": "Whitelist Addressess",
      "description": "A list of addresses allowed to interact with your NFT.",
      "$id": "/schemas/whitelist",
      "type": "object",
      "ui:panel": true,
      "ui:toggle": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "ui:toggle": true
        },
        "address": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Alphanumeric Terra Address",
          "description": "Address allowed to interact with your NFT."
        }
      }
    },

    "taxes": {
      "title": "Add Built-In Taxes",
      "description": "Fees built into the NFT, applied upon its sale.",
      "$id": "/schemas/taxes",
      "type": "object",
      "ui:panel": true,
      "ui:toggle": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "ui:toggle": true
        },
        "description": {
          "type": "string",
          "title": "Tax Description",
          "description": "* Optional - Information is solely for organizational use."
        },
        "distribution-type": {
          "type": "object",
          "title": "Distribution Type",
          "anyOf": [
            {
              "title": "By Percentage",
              "type": "object",
              "ui:group": true,
              "properties": {
                "distribution_percentage": {
                  "title": "% fee of sale price",
                  "type": "number"
                }
              }
            },
            {
              "title": "By Flat Fee",
              "type": "object",
              "ui:group": true,
              "properties": {
                "distribution_fiat-fee": {
                  "type": "number",
                  "title": "Flat fee"
                },
                "distribution_fiat-fee-currency": {
                  "type": "string",
                  "title": "Currency type",
                  "enum": ["usd"],
                  "enumNames": ["USD"],
                  "default": "usd"
                }
              }
            }
          ]
        },
        "payment_address": {
          "type":"array",
          "items": {
            "type": "string"
          },
          "title": "Alphanumeric Terra Address",
          "description": "Address recieving funds from tax."
        }
      }
    },

    "royalties": {
      "title": "Setup Royalties",
      "description": "Fees paid to the author, owner of the NFT. By percentage or flat fee.",
      "$id": "/schemas/royalties",
      "type": "object",
      "ui:panel": true,
      "ui:toggle": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "ui:toggle": true
        },
        "description": {
          "type": "string",
          "title": "Royalty Description",
          "description": "*Optional - Information is solely for organizational use."
        },
        "distribution-type": {
          "type": "object",
          "title": "Distribution Type",
          "anyOf": [
            {
              "title": "By Percentage",
              "type": "object",
              "ui:group": true,
              "properties": {
                "distribution_percentage": {
                  "title": "% fee of sale price",
                  "type": "number"
                }
              }
            },
            {
              "title": "By Flat Fee",
              "type": "object",
              "ui:group": true,
              "properties": {
                "distribution_fiat-fee": {
                  "type": "number",
                  "title": "Flat fee"
                },
                "distribution_fiat-fee-currency": {
                  "type": "string",
                  "title": "Currency type",
                  "enum": ["usd"],
                  "enumNames": ["USD"],
                  "default": "usd"
                }
              }
            }
          ]
        },
        "payment_address": {
          "type":"array",
          "items": {
            "type": "string"
          },
          "title": "Alphanumeric Terra Address",
          "description": "Address for royalty distributions to be provided."
        }
      }
    },

    "blacklist": {
      "title": "Blacklist Addressess",
      "description": "A list of addresses prohibited from interaction with your NFT.",
      "$id": "/schemas/blacklist",
      "type": "object",
      "ui:panel": true,
      "ui:toggle": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "ui:toggle": true
        },
        "address": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Alphanumeric Terra Address",
          "description": "Address blacklisted to interact with your NFT."
        }
      }
    },

    "splitter": {
      "title": "Splitter",
      "description": "Distribute funds by percentage to others.",
      "$id": "/schemas/splitter",
      "type": "object",
      "ui:panel": true,
      "ui:toggle": true,
      "required": ["percentage"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "ui:toggle": true
        },
        "percentage": {
          "type": "string",
          "title": "Percentage",
          "description": "The percentage to distribute to addresses.",
          "maximum": 100
        },
        "address": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Alphanumeric Terra Address",
          "description": "Address to distribute funds amongst."
        }
      }
    },

    "timelock": {
      "title": "Timelock",
      "description": "Allows users to lock funds until a specified time or block height.",
      "$id": "/schemas/timmelock",
      "type": "object",
      "ui:panel": true,
      "ui:toggle": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "ui:toggle": true
        },
        "payment_address": {
          "type":"array",
          "items": {
            "type": "string"
          },
          "title": "Alphanumeric Terra Address",
          "description": "Address for distribution recipients. *(Defaults to sender if undeclared.)"
        },
        "expiration-type": {
          "type": "object",
          "title": "Expiration Type",
          "anyOf": [
            {
              "title": "By Date",
              "type": "object",
              "ui:group": true,
              "properties": {
                "date": {
                  "type": "string",
                  "title": "Time & Date to Unlock",
                  "description": "The time and date to be reached for funds to be available for release.",
                  "format": "date-time"
                }
              }
            },
            {
              "title": "By Block Height",
              "type": "object",
              "ui:group": true,
              "properties": {
                "block-height": {
                  "type": "string",
                  "title": "Height to Unlock",
                  "description": "The height to be reached for funds to be available for release."
                }
              }
            }
          ]
        }
        
      }
    }

  },
  "type": "object",
  "properties": {
    "nft-details": {
      "$ref": "#/definitions/nft-details"
    },
    "whitelist": {
      "$ref": "#/definitions/whitelist"
    },
    "taxes": {
      "$ref": "#/definitions/taxes"
    },
    "royalties": {
      "$ref": "#/definitions/royalties"
    },
    "blacklist": {
      "$ref": "#/definitions/blacklist"
    },
    "splitter": {
      "$ref": "#/definitions/splitter"
    },
    "timelock": {
      "$ref": "#/definitions/timelock"
    }
  }
}
